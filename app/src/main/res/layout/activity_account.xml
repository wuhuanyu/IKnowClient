<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_account_name_edit"

        android:hint="@string/login2_name_edit_hint"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_account_name_edit"
        android:hint="@string/login2_passwd_edit_hint"
        android:id="@+id/activity_account_password_edit"/>



    <Button android:layout_below="@id/activity_account_password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_account_login_btn"

        android:text="@string/login2_login_btn_text"/>
    <Button style="@style/CommonBtn"
        android:id="@+id/activity_account_logout_btn"
        android:text="Logout"
        android:layout_below="@id/activity_account_login_btn">
    </Button>
    <Button
        style="@style/CommonBtn"
        android:id="@+id/activity_account_signup_btn"
        android:layout_below="@id/activity_account_logout_btn"
        android:text="SignUp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_account_test_btn"
        android:layout_below="@id/activity_account_signup_btn"
        android:text="Test"/>
</RelativeLayout>

